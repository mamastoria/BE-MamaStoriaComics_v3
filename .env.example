# App Config
APP_NAME=MamaStoria
APP_ENV=development
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True

# Database
DATABASE_URL=postgresql://root:@localhost:5432/mamastoria_db

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google Cloud
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_BUCKET_NAME=your-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=gcp-sa-key.json
VERTEX_LOCATION=us-central1

# Firebase
FIREBASE_CREDENTIALS=firebase-key.json

# DOKU Payment Gateway
DOKU_CLIENT_ID=your-doku-client-id
DOKU_SECRET_KEY=your-doku-secret-key
DOKU_NOTIFICATION_SECRET=your-doku-notification-secret
DOKU_IS_PRODUCTION=false

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp
ALLOWED_AUDIO_EXTENSIONS=mp3,wav,m4a

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
